@page
@using StudentBio.Localization
@using StudentBio.Web.Pages.Exercises
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model CreateModalModel
@inject IStringLocalizer<StudentBioResource> L
@{
    Layout = null;
}
<form asp-page="/Exercises/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewExercise"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Exercise.StudentExerciseId" />
            <abp-input asp-for="Exercise.Name" />
            <abp-input asp-for="Exercise.DueDate" />
            <abp-input asp-for="Exercise.IsCompleted" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
